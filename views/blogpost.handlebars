<div class="blogPostCommentSection" id="{{blog.id}}"> 
    <h2>
        <a href="/blogpost/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <div>
        {{blog.body}}

    </div>
    <span>
        {{blog.user.email}}
    </span>
    <form>Leave a comment<textarea id="comment"></textarea> 
    <button type="submit" id="commentButton">Submit</button>
    </form>
    <div>
         {{#each blog.comments}}
    <div>
        <div>
            {{text}}

        </div>
        <span>
            {{user.email}}
            {{createdAt}}
        </span>

    </div>


    {{/each}}
    </div>
    <script src= "/js/newcomment.js"></script>

</div>